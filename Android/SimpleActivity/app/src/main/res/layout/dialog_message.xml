<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:hint="El Resultado es:"
        android:textColorHint="#FFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#FFF"
        android:text="Calcular"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etNumTwo"
        app:layout_constraintStart_toStartOf="@+id/etNumTwo"
        app:layout_constraintTop_toBottomOf="@+id/etNumTwo"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etNumOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"

        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="Num One"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="@+id/tvRes"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/tvRes"
        app:layout_constraintTop_toBottomOf="@+id/tvRes" />

    <EditText
        android:id="@+id/etNumTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"

        android:backgroundTint="#fff"
        android:ems="10"
        android:hint="Num Two"
        android:textColorHint="#fff"
        app:layout_constraintEnd_toEndOf="@+id/etNumOne"
        app:layout_constraintStart_toStartOf="@+id/etNumOne"
        app:layout_constraintTop_toBottomOf="@+id/etNumOne"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>